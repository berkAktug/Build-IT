    <style>
 
        body {
            font-family: Arial;
        }
 
        /* Style the tab */
        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
        }
 
            /* Style the buttons inside the tab */
            .tab button {
                background-color: inherit;
                float: left;
                border: none;
                outline: none;
                cursor: pointer;
                padding: 14px 16px;
                transition: 0.3s;
                font-size: 17px;
            }
 
                /* Change background color of buttons on hover */
                .tab button:hover {
                    background-color: #ddd;
                }
 
                /* Create an active/current tablink class */
                .tab button.active {
                    background-color: #ccc;
                }
 
        /* Style the tab content */
        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }
 
        /*Remove default border in chrome*/
        :focus {
            outline: 0 !important;
        }
 
 
        /*Default button style*/
        .button-normal {
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
            background-color: white;
            font-size: 16px;
            color: black;
            border: 4px solid black;
            width: 200px;
            margin: 10px 5px;
            padding: 4px 8px;
            border-radius: 12px;
            font-weight: bold;
        }

        /*Background button style*/
        .button-highlight-background {
            border: 4px solid red;
            background-color: red;
        }

        /*Background button style*/
