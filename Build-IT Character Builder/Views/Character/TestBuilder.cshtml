            border: 4px solid orange;
            background-color: orange;
        }
 
        /*Gender button style*/
        .button-highlight-gender {
            border: 4px solid lightblue;
            background-color: lightblue;
        }
 
        /*flex row*/
        .row {
            display: flex;
            flex-direction: row;
            width: 100%;
        }
 
        /*flex column*/
        .column {
            display: flex;
            flex-direction: column;
            flex-basis: 100%;
            flex: 1;
        }
 
        .glyphicon {
            transform: translateY(5px);
            font-size: 24px;
            padding: 0px;
        }

        .button-add {
            background-color: #4CAF50; /* Green */
